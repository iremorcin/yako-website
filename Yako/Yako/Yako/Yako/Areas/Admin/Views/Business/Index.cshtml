@model List<Yako.Infrastructure.Entities.Business>
@{
    ViewData["Title"] = "İşletme Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>İşletme Listesi</h2>
        <a class="btn btn-primary" href="/Admin/Business/Create">+ Yeni İşletme Ekle</a>
    </div>

    <table class="table table-bordered table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th>Başlık</th>
                <th>Adres</th>
                <th>Kategori</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Address</td>
                    <td>@item.Category?.Name</td>
                    <td>
                        <a class="btn btn-sm btn-warning me-1" href="/Admin/Business/Edit/@item.Id">Düzenle</a>

                        <a href="@Url.Action("Delete", "Business", new { area = "Admin", id = item.Id })" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
