@model List<Yako.Infrastructure.Entities.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Kategori Listesi";
}



<h2>Kategori Listesi</h2>

<a href="@Url.Action("Create", "Category", new { area = "Admin" })" class="btn btn-success mb-3">Yeni Kategori Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ad</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a href="@Url.Action("Delete", "Category", new { area = "Admin", id = item.Id })" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>


